<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="tofex_check_solutions" instance="Tofex\Foundation\Model\Cron" method="checkSolutions">
            <schedule>0 21 * * *</schedule>
        </job>
        <job name="tofex_check_packages" instance="Tofex\Foundation\Model\Cron" method="checkPackages">
            <schedule>0 21 * * *</schedule>
        </job>
    </group>
</config>
